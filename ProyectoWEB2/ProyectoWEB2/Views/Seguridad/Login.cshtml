<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="~/asset/login/login.css" rel="stylesheet" />

@{
    Layout =null;
}

<!------ Include the above in your HEAD tag ---------->
<section class="login-block">
    <div class="container">
        <div class="row">
            <div class="col-md-4 login-sec">
                <h2 class="text-center">Ingreso al Sistema</h2>
                @using (Html.BeginForm("Index", "Dashboard", new { area = "Dashboard" }, FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="text-uppercase">Usuario</label>
                        <input type="text" class="form-control" placeholder="">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="text-uppercase">Contraseña</label>
                        <input type="password" class="form-control" placeholder="">
                    </div>


                    <div class="form-check">
                        <button type="submit" class="btn btn-login float-right">Ingresar</button>
                    </div>
                }




                <div class="copy-text">SISEDE - 2019</div>
            </div>
            <div class="col-md-8 banner-sec">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="~/asset/login/1.jpg" alt="First slide">

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>